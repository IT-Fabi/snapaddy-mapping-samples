{
    "meta": {
        "lead": {
            "apiName": "Lead",
            "idProperty": "LeadId"
        },
        "contact": {
            "apiName": "Contact",
            "idProperty": "ContactId"
        },
        "account": {
            "apiName": "Account",
            "idProperty": "AccountId"
        },
        "appointment": {
            "apiName": "Appointment",
            "idProperty": "ActivityId"
        },
        "task": {
            "apiName": "Task",
            "idProperty": "ActivityId"
        },
        "fieldDefinitions": {
            "entities": [
                "Lead",
                "Contact",
                "Account",
                "Appointment",
                "Task"
            ]
        }
    },
    "visitreport": {
        "mappings": {
            "*": {
                "lead": {
                    "Salutation": "{{ gender == -1? ('') : (gender == 0? ('Herr') : ('Frau')) }}",
                    "Subject": "{{ topic }}",
                    "FirstName": "{{ firstName }}",
                    "LastName": "{{ lastName }}",
                    "JobTitle": "{{ position }}",
                    "CompanyName": "{{ organization }}",
                    "WebSiteUrl": "{{ website }}",
                    "EMailAddress1": "{{ email }}",
                    "Telephone1": "{{ phone }}",
                    "MobilePhone": "{{ mobile }}",
                    "Fax": "{{ fax }}",
                    "Address1_Line1": "{{ street }}",
                    "Address1_City": "{{ city }}",
                    "Address1_PostalCode": "{{ zip }}",
                    "Address1_Country": "{{ country }}",
                    "Address1_StateOrProvince": "{{ state }}"
                },
                "contact": {
                    "Salutation": "{{ gender == -1? ('') : (gender == 0? ('Herr') : ('Frau')) }}",
                    "FirstName": "{{ firstName }}",
                    "LastName": "{{ lastName }}",
                    "JobTitle": "{{ position }}",
                    "MobilePhone": "{{ mobile }}",
                    "Fax": "{{ fax }}",
                    "Telephone1": "{{ phone }}",
                    "WebSiteUrl": "{{ website }}",
                    "EMailAddress1": "{{ email }}",
                    "Address1_Line1": "{{ street }}",
                    "Address1_City": "{{ city }}",
                    "Address1_PostalCode": "{{ zip }}",
                    "Address1_Country": "{{ country }}",
                    "Address1_StateOrProvince": "{{ state }}",
                    "GenderCode": {
                        "Value": "{{ execute(genderMapping) }}"
                    },
                    "ParentCustomerId": {
                        "Id": "{{ _account.AccountId }}",
                        "LogicalName": "account"
                    }
                },
                "account": {
                    "Name": "{{ organization }}",
                    "WebSiteURL": "{{ website }}",
                    "Telephone1": "{{ phone }}",
                    "Fax": "{{ fax }}",
                    "Address1_Line1": "{{ street }}",
                    "Address1_PostalCode": "{{ zip }}",
                    "Address1_City": "{{ city }}",
                    "Address1_Country": "{{ country }}",
                    "Address1_StateOrProvince": "{{ state }}"
                },
                "note": {
                    "note": "{{ execute(getVisitReportNote) }}"
                },
                "workflows": {
                    "lead": [
                        {
                            "entity": "lead"
                        },
                        {
                            "entity": "attachments",
                            "config": {
                                "drawing": {
                                    "entity": "lead",
                                    "name": "Drawing.jpg"
                                },
                                "bcImage": {
                                    "entity": "lead",
                                    "name": "VCard front.jpg"
                                },
                                "bcImageBackside": {
                                    "entity": "lead",
                                    "name": "VCard back.jpg"
                                },
                                "image": {
                                    "entity": "lead",
                                    "name": "Profile image.jpg"
                                },
                                "attachments": {
                                    "entity": "lead",
                                    "name": "Attachment_${i}.jpg"
                                },
                                "note": {
                                    "entity": "lead",
                                    "name": "VisitReport Note"
                                }
                            }
                        }
                    ],
                    "contact_account": [
                        {
                            "entity": "account"
                        },
                        {
                            "entity": "contact",
                            "dependsOn": [
                                "account"
                            ]
                        },
                        {
                            "entity": "attachments",
                            "config": {
                                "drawing": {
                                    "entity": "contact",
                                    "name": "Drawing.jpg"
                                },
                                "bcImage": {
                                    "entity": "contact",
                                    "name": "VCard front.jpg"
                                },
                                "bcImageBackside": {
                                    "entity": "contact",
                                    "name": "VCard back.jpg"
                                },
                                "image": {
                                    "entity": "contact",
                                    "name": "Profile image.jpg"
                                },
                                "attachments": {
                                    "entity": "contact",
                                    "name": "Attachment_${i}.jpg"
                                },
                                "note": {
                                    "entity": "contact",
                                    "name": "VisitReport Note"
                                }
                            }
                        }
                    ]
                }
            }
        }
    },
    "code": {
        "contact": {
            "post": [
                "if(!mappedObject.ParentCustomerId || !mappedObject.ParentCustomerId.Id) {",
                "  delete mappedObject.ParentCustomerId;",
                "}",
                "return mappedObject;"
            ]
        },
        "functions": {
            "genderMapping": [
                "  if (address.gender === 0) { return 1; }",
                "  if (address.gender === 1) { return 2; }",
                "  return null;                           "
            ],
            "getVisitReportNote": [
                "var note = address.note || '';",
                "if (address.visitreport && address.visitreport.result) {",
                "  note += '\\n\\nVisitReport\\n\\n';",
                "  var result = address.visitreport.result;",
                "  for (var key in result) {",
                "    note += result[key].question + ' = ' + result[key].text + '\n';",
                "  }",
                "}",
                "return note.replace(/\"/g,'\\\\\"');"
            ]
        }
    }
}